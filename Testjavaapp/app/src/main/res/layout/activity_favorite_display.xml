<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context="com.models.FavoriteDisplayActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:tintMode="src_in"
        app:srcCompat="@drawable/lunchbot"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="#ECECEC"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/imageView3"/>

    <TextView
        android:layout_height="100dp"
        android:layout_width="289dp"
        app:layout_constraintVertical_bias="0.019"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/textView4"
        android:fontFamily="@font/gilroy_eb"
        android:textSize="68dp"
        android:textColorLink="#ECECEC"
        android:textColor="#ECECEC"
        android:text="lunchBot"
        android:layout_marginTop="528dp"/>

    <TextView
        android:layout_height="526dp"
        android:layout_width="257dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:text="This will be where we display favorite queries \n Q1: McDonalds \n Q2:
                      Burger King \n AND SO ON... \n This is for illustrative purposes \n only
                      This is showing the background and some sense \n of what the API output will look like "/>

</androidx.constraintlayout.widget.ConstraintLayout>